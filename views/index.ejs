<html>
	<head>
	<style>
		#Lamp {
			background: #000;
			position: absolute;
			border: 1px solid #000;
			bottom: 10px;
			right: 10px;
		}

		#Lamp iframe {
			border: 0;
		}

		#Lamp p {
			margin: 0;
			color: #fff;
			font-weight: bold;
			text-align: center;
		}
	</style>
	</head>
	<body>
	<form action="">
		<input id="On" type="button" value="On" />
		<input id="Off" type="button" value="Off" />
		<input id="Color" />
		<select id="Mode">
			<option disabled selected>Select</option>
			<option value="police">Police</option>
			<option value="romantic">Romantic</option>
			<option value="macbook">Macbook Pro</option>
		</select>

	</form>
	<div id="Lamp">
		<iframe src="/lamp"></iframe>
		<p>Lamp Emulator</p>
	</div>
	<script src="/javascript/jquery.min.js"></script>
	<script>
		$('#On').on('click', function(e) {
				e.preventDefault();
				$.get('/api/on');
		});

		$('#Off').on('click', function(e) {
				e.preventDefault();
				$.get('/api/off');
		});		

		$('#Mode').on('change', function(e) {
				e.preventDefault();
				$.get('/api/mode/'+e.target.value);
		});		

		$('#Color').on('keyup', function(e) {
				var isRGB = /\d{1,3},\d{1,3},\d{1,3}/.test(e.target.value);
				if(isRGB) {
					$.get('/api/rgb/'+e.target.value);
				}
		});
	</script>
	</body>
</html>
